{% extends "base.jinja" %}
{% block title %}
  Team
{% endblock title %}
{% block content %}
  <div class="content-wrapper">
    <div class="team-container">
      {% for pkmn in pkmnTeam %}
        {% if sendingToBox %}
          <div class="sprite-and-btn">
            <img src="{{ pkmn }}" alt="" height="" width="" class="sprite">
            <form method="post">
              {{ form.deletePkmnBtn(class="btn delay-show-bottom", value=loop.index) }}
            </form>
          </div>
        {% else %}
          {% if instantSprite %}
            <div class="sprite-and-btn">
              <img src="{{ pkmn }}" alt="" height="" width="" class="sprite">
              <button class="btn hidden"></button>
            </div>
          {% else %}
            <div class="sprite-and-btn">
              <img src="{{ pkmn }}"
                   alt=""
                   height=""
                   width=""
                   class="sprite delay-show{{ loop.index }}">
              <button class="btn hidden"></button>
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
  <form method="post">
    <div class="input-form-wrapper delay-show">
      {% if sendingToBox %}
        {{ form.cancelBtn(class="btn delete-btn") }}
      {% else %}
        {{ form.sendToBoxBtn(class="btn delete-btn") }}
      {% endif %}
    </div>
  </form>
{% endblock content %}

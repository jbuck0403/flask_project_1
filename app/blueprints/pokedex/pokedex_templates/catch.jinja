{% extends "base.jinja" %}
{% block title %}
  Tall Grass
{% endblock title %}
{% block content %}
  <div class="form-error">
    {% if form.pokedexInput.errors %}
      {% for error in form.pokedexInput.errors %}{{ error }}{% endfor %}
    {% endif %}
  </div>
  <div class="content-wrapper">
    <form method="post">
      {{ form.hidden_tag() }}
      <div class="pokedex-wrapper">
        {{ form.pokedexInput.label(for="pokemonID") }}
        <div class="pokedex-input-field-container">{{ form.pokedexInput(class="field pokedex-field", id="pokemonID") }}</div>
      </div>
    </form>
    {% if connectErrorCode %}
      {{ connectErrorCode }}
    {% elif unownMessage %}
      <div class="error">{{ unownMessage }}</div>
    {% elif spriteURL %}
      <div class="favorite-container">
        <div class="delay-show">A wild {{ name }} appears!</div>
        <div>
          <img src="{{ spriteURL }}"
               alt=""
               height=""
               width=""
               class="sprite delay-show-bottom">
        </div>
        <form method="post">
          {{ form.catchPkmnBtn(class="btn delay-show-bottom") }}
        </form>
      </div>
    {% endif %}
  </div>
{% endblock content %}
